@model LancheListViewModel

@{
    ViewData["Title"] = "Lanches";
}

<div>
    <h2>
        Todos os Lanches 
        @if(!String.IsNullOrEmpty(Model.CategoriaAtual))
        {
            <span> - @Model.CategoriaAtual </span>
        }
    </h2>
</div>

<div class="container">
    <div class="row">
        @foreach (var lanche in Model.Lanches)
        {
            <partial name="_LancheResumo" for="@lanche" />
        }
    </div>
</div>